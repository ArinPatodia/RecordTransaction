@model IEnumerable<TransactionRecord.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}
@if (TempData.Keys.Contains("LastActionMessage"))
{
    <h4 class="alert-info">@TempData["LastActionMessage"]</h4>
}
<h2>@ViewBag.Name</h2>
<h2>@ViewBag.Symbol</h2>
<p>
    <a asp-controller="TransactionNew" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SharePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SharePrice)
                </td>
                <td>
                    <a asp-controller="TransactionNew" asp-action="Edit" asp-route-id="@item.CompanyId"> @Html.DisplayFor(modelItem => item.Company.CompanyName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionType.TransactionTypeId)
                </td>
                <td>
                    <a asp-controller="TransactionNew" asp-action="Edit" asp-route-id="@item.CompanyId">Edit</a> |
                    <a asp-controller="TransactionNew" asp-action="Details" asp-route-id="@item.CompanyId">Details</a> |
                    <a asp-controller="TransactionNew" asp-action="Delete" asp-route-id="@item.CompanyId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
