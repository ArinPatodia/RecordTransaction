<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</head>
<body>
    
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a href="@Url.Action("Index", "TransactionRecord")" class="navbar-brand">
                <img src="/css/logo.jpg" alt="logo of a company" style="height: 110px; width: 160px;" />
            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TransactionRecord" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">

                        <a class="nav-link" asp-controller="Transaction" asp-action="Add">Add Transaction</a>
                    </li>
                   <li class="nav-item">
                        <a class="nav-link" asp-controller="TransactionRecord" asp-action="Index">Transactions</a>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CompaniesRecord" asp-action="Index">Companies</a>
                    </li>
                </ul>
            </div>
        </nav>
        @RenderBody()
    </div>
</body>
</html>